<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/myPopupTheme</item>
    </style>

    <style name="myPopupTheme" parent="@android:style/Widget.Holo.PopupMenu">

    </style>

    <style name="wraperPopupMenuStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:width">20dp</item>
        <item name="android:layout_width">20dp</item>
    </style>
    <style name="MainLabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/main_label_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:drawableRight">@drawable/ic_action_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DivStyle">
        <item name="android:background">@drawable/div_gradient</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="userDataDivStyle">
        <item name="android:background">@drawable/div_gradient_user_data</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="moreStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="lastReportLabelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="editButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="reportListItemStyle">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/list_item_report_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ayunosStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorForegroundAyuno</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="fechaStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorMoreForeground</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="lugarStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorMoreForeground</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="moreDetailsStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="pointsStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="reporDetailsLabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="reportDetailsStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="sccSplashStyle">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="reportSplashStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="registerLabelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="loginStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ems">10</item>
    </style>

    <style name="registerBTStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorForegroundRegister</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="loginTBStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBackgroundRegister</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="emailTBStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="createReportDataStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="createReportNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="reportDataStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColorHint">@android:color/tab_indicator_text</item>
    </style>

    <style name="nameUserDataStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="lugarUserDataStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="labelUserDataStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="userDataStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
